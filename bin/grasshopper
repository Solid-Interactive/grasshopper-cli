}

function setup(){
    var questions = [{
            type: 'input',
            name: 'path',
            message: 'Enter your project\'s home directory',
            default: process.cwd()
        },{
            type: 'list',
            name: 'installType',
            message: 'What type of install would you like?',
            choices: ['Quick', 'Custom']
        }];

    logger.statement('Grasshopper Setup, please answer a few questions to get started.');

    inquirer.prompt(questions, function( answers ) {
        var config = {
                project: {
                    home: answers.path
                },
                crypto: {
                    secret: guid()
                }
            };

        if(answers.installType === 'Quick') {
            validateProject(config)
                .then(installNpms)
                .then(configureApi)
                .then(configureLogger)
                .then(writeConfig)
                .catch(function(err){
                    logger.error(err.message);
                })
                .done(function(results){
                    console.log(results);
                });
        }
    });
}

program
    .version('0.0.1')
    .option('setup', 'Setup');

program.on('setup', setup);

output.welcome();
program.parse(process.argv);

